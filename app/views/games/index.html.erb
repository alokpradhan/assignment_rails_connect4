<h1> Welcome to Connect Four! </h1>
<% @board.each do |col| %>
<p class="col"> <% col.each do |piece| %>
	<%= content_tag(:div, nil, :class => "circle#{piece}") %>
<% end %>
</p>
<% end %>

<% if @game_over %>
	<%=form_tag("/index", method: "get") do %>
		<button name="restart" value="true">Play again!</button>
	<% end %>
<% else %>
	<%= form_tag("/move", method: "post") do %>
		<%= number_field_tag("col", 0, {max: 6, min: 0}) %>
		<%= submit_tag "Submit" %>
	<% end %>
<% end %>